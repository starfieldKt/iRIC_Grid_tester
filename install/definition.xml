<?xml version="1.0" encoding="UTF-8"?>

<!-- ============================================
 ソルバーの基本情報
============================================= -->
<SolverDefinition
  name="Grid_tester"
  caption="Grid Tester"
  version="1.0.23012602"
  copyright="Keita Hoshino"
  release="2023.01.26"
  homepage=""
  executable="Grid_tester.exe"
  iterationtype="time"
  gridtype="structured2d"
>

    <!-- ============================================
     計算条件の定義
    ============================================= -->
    <CalculationCondition>
        <Tab name = "readme" caption = "readme">
            <Label caption="・No need to set anything.
・Just run the calculation and the grid elevation will be output.
・Bonus features are optional." />
        </Tab>
        <Tab name = "omake" caption = "omake mode">
            <Item name="omake" caption="omake mode">
                <Definition valueType="integer" default="0" checkBox="true" />
            </Item>
            <Item name="time_step" caption="time step of output">
                <Definition valueType="real" default="1">
                <Condition type="isEqual" target="omake" value="1" />
                </Definition>
            </Item>
            <Item name="Water_level" caption="Water level">
                <Definition valueType="functional" >
                    <Parameter valueType="real" caption="Time(sec)" />
                    <Value valueType="real" caption="Water level" />
                    <Condition type="isEqual" target="omake" value="1" />
                </Definition>
            </Item>
        </Tab>
    </CalculationCondition>
    
    <!-- ============================================
     格子属性の定義
    ============================================= -->
    <GridRelatedCondition>
        <Item name="Elevation" caption="Elevation">
            <Definition position="node" valueType="real" default="max" />
        </Item>

    </GridRelatedCondition>

</SolverDefinition>